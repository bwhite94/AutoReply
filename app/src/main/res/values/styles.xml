<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- BEGIN SETTINGS STYLES -->
    <style name="HorizontalBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="settingsTableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="settingsSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:showText" tools:targetApi="lollipop">true</item>
        <item name="android:textOff">Off</item>
        <item name="android:textOn">On</item>
    </style>

    <!-- END SETTINGS STYLES -->

</resources>
